# across different editors and IDEs for all developers working on the project.
# For more information, visit https://editorconfig.org/

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Frontend files (JavaScript, TypeScript, HTML, CSS, JSON, YAML)
[*.{js,ts,html,scss,css,json,yml,yaml}]
indent_style = space
indent_size = 2

# Python files (backend)
[*.{py}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefiles must use tabs
[Makefile]
indent_style = tab